{
  "name": "claude-usage-analytics",
  "displayName": "Claude Usage Analytics",
  "description": "Real-time Claude Code usage stats, costs, and analytics in VS Code",
  "version": "1.0.0",
  "publisher": "analyticendeavors",
  "icon": "media/icon.png",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/analyticendeavors/claude-usage-analytics"
  },
  "bugs": {
    "url": "https://github.com/analyticendeavors/claude-usage-analytics/issues"
  },
  "homepage": "https://github.com/analyticendeavors/claude-usage-analytics#readme",
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "claude",
    "anthropic",
    "usage",
    "analytics",
    "cost",
    "tokens",
    "ai",
    "llm",
    "statistics"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claudeAnalytics",
          "title": "Claude Analytics",
          "icon": "media/claude-icon.svg"
        }
      ]
    },
    "views": {
      "claudeAnalytics": [
        {
          "type": "webview",
          "id": "claudeUsage.dashboard",
          "name": "Dashboard"
        }
      ]
    },
    "commands": [
      {
        "command": "claudeUsage.refresh",
        "title": "Refresh Claude Usage",
        "icon": "$(refresh)"
      },
      {
        "command": "claudeUsage.showPanel",
        "title": "Show Claude Analytics Panel"
      },
      {
        "command": "claudeUsage.showTab.overview",
        "title": "Show Claude Analytics - Overview"
      },
      {
        "command": "claudeUsage.showTab.cost",
        "title": "Show Claude Analytics - Cost"
      },
      {
        "command": "claudeUsage.showTab.messages",
        "title": "Show Claude Analytics - Messages"
      },
      {
        "command": "claudeUsage.showTab.personality",
        "title": "Show Claude Analytics - Personality"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "claudeUsage.refresh",
          "when": "view == claudeUsage.dashboard",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "claudeUsage.showPanel",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "claudeUsage.refresh",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/vscode": "^1.95.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "keytar": "^7.9.0"
  }
}
