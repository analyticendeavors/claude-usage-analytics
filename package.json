{
  "name": "claude-usage-analytics",
  "displayName": "Claude Usage Analytics",
  "description": "Real-time Claude Code usage stats, costs, and analytics in VS Code",
  "version": "1.1.0",
  "publisher": "analyticendeavors",
  "icon": "media/icon.png",
  "license": "MIT WITH Commons-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/analyticendeavors/claude-usage-analytics"
  },
  "bugs": {
    "url": "https://github.com/analyticendeavors/claude-usage-analytics/issues"
  },
  "homepage": "https://github.com/analyticendeavors/claude-usage-analytics#readme",
  "__attribution": {
    "creator": "Reid Havens",
    "company": "Analytic Endeavors",
    "website": "https://analyticendeavors.com",
    "copyright": "2024-2025"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "claude",
    "anthropic",
    "usage",
    "analytics",
    "cost",
    "tokens",
    "ai",
    "llm",
    "statistics"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "claudeAnalytics",
          "title": "Claude Analytics",
          "icon": "media/claude-icon.svg"
        }
      ]
    },
    "views": {
      "claudeAnalytics": [
        {
          "type": "webview",
          "id": "claudeUsage.dashboard",
          "name": "Dashboard"
        }
      ]
    },
    "commands": [
      {
        "command": "claudeUsage.refresh",
        "title": "Refresh Claude Usage",
        "icon": "$(refresh)"
      },
      {
        "command": "claudeUsage.showPanel",
        "title": "Show Claude Analytics Panel"
      },
      {
        "command": "claudeUsage.showTab.overview",
        "title": "Show Claude Analytics - Overview"
      },
      {
        "command": "claudeUsage.showTab.cost",
        "title": "Show Claude Analytics - Cost"
      },
      {
        "command": "claudeUsage.showTab.messages",
        "title": "Show Claude Analytics - Messages"
      },
      {
        "command": "claudeUsage.showTab.personality",
        "title": "Show Claude Analytics - Personality"
      },
      {
        "command": "claudeUsage.exportData",
        "title": "Export Claude Usage Data",
        "icon": "$(export)"
      },
      {
        "command": "claudeUsage.clearHistory",
        "title": "Claude Analytics: Clear History Before Date",
        "icon": "$(trash)"
      },
      {
        "command": "claudeUsage.recalculateHistory",
        "title": "Claude Analytics: Recalculate Historical Costs",
        "icon": "$(history)"
      },
      {
        "command": "claudeUsage.refreshLiveStats",
        "title": "Scan Live Today Stats",
        "icon": "$(sync)"
      },
      {
        "command": "claudeUsage.syncToGist",
        "title": "Claude Analytics: Sync to Gist",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "claudeUsage.importFromGist",
        "title": "Claude Analytics: Import from Gist",
        "icon": "$(cloud-download)"
      },
      {
        "command": "claudeUsage.configureGistSync",
        "title": "Claude Analytics: Configure Gist Sync",
        "icon": "$(gear)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "claudeUsage.refreshLiveStats",
          "when": "view == claudeUsage.dashboard",
          "group": "navigation"
        },
        {
          "command": "claudeUsage.refresh",
          "when": "view == claudeUsage.dashboard",
          "group": "navigation"
        },
        {
          "command": "claudeUsage.exportData",
          "when": "view == claudeUsage.dashboard",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "claudeUsage.showPanel",
        "key": "ctrl+alt+c",
        "mac": "cmd+alt+c"
      },
      {
        "command": "claudeUsage.refresh",
        "key": "ctrl+alt+r",
        "mac": "cmd+alt+r"
      }
    ],
    "configuration": {
      "title": "Claude Usage Analytics",
      "properties": {
        "claudeUsage.showLifetimeCost": {
          "type": "boolean",
          "default": true,
          "description": "Show lifetime cost in status bar"
        },
        "claudeUsage.showTodayCost": {
          "type": "boolean",
          "default": true,
          "description": "Show today's cost in status bar"
        },
        "claudeUsage.showMessages": {
          "type": "boolean",
          "default": true,
          "description": "Show message count in status bar"
        },
        "claudeUsage.showTokens": {
          "type": "boolean",
          "default": true,
          "description": "Show token count in status bar"
        },
        "claudeUsage.showPersonality": {
          "type": "boolean",
          "default": true,
          "description": "Show personality indicator in status bar"
        },
        "claudeUsage.showActivity": {
          "type": "boolean",
          "default": true,
          "description": "Show activity stats in status bar"
        },
        "claudeUsage.showRateLimits": {
          "type": "boolean",
          "default": true,
          "description": "Show rate limits in status bar"
        },
        "claudeUsage.dailyBudget": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 1000,
          "description": "Daily spending budget in dollars (0 = no budget). Status bar turns yellow at 70%, red at 90%."
        },
        "claudeUsage.costAlertThreshold": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 100,
          "description": "Show alert notification when daily cost exceeds this amount (0 = disabled)."
        },
        "claudeUsage.gistSync.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable backup of analytics database to GitHub Gist. See [setup instructions](https://github.com/analyticendeavors/claude-usage-analytics#github-gist-backup) for configuration steps."
        },
        "claudeUsage.gistSync.gistId": {
          "type": "string",
          "default": "",
          "markdownDescription": "GitHub Gist ID to sync to. Leave empty to auto-create on first sync. Find your Gist ID in the URL after creating: `gist.github.com/username/<gist-id>`"
        },
        "claudeUsage.gistSync.token": {
          "type": "string",
          "default": "",
          "markdownDescription": "GitHub Personal Access Token with 'gist' scope. Create one at [github.com/settings/tokens](https://github.com/settings/tokens) - select only the 'gist' permission."
        },
        "claudeUsage.gistSync.autoSync": {
          "type": "boolean",
          "default": true,
          "description": "Automatically sync to Gist after each data update (requires token configured)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.19.27",
    "@types/sql.js": "^1.4.9",
    "@types/vscode": "^1.95.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "keytar": "^7.9.0",
    "sql.js": "^1.11.0"
  }
}
